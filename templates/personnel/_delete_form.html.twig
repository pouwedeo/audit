<form method="post" action="{{ path('personnel_delete', {'id': personnel.id}) }}" onsubmit="return confirm('êtes-vous sûr de vouloir supprimer cette personne?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ personnel.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
