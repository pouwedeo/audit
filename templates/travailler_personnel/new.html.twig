{% block entete %}
	<form class="form-inline ml-3">
		<div class="input-group input-group-sm">
			<input class="form-control form-control-navbar" readonly="readonly" placeholder="Entreprise  &nbsp;{{entreprise|upper}}" aria-label="Search" aria-describedby="basic-addon2">
			<div class="input-group-append">
				<button class="btn btn-success" type="button">
					<a href="{{path('inter_liste', {'id':id })}}" style="color: white;">
						<i class="fas fa-home fa-sm"></i>
					</a>
				</button>
			</div>
		</div>
	</form>

{% endblock %}
{% block body %}
	{% for contenu in app.session.getflashbag.get('travailler_personnel.succes') %}
		<div class=" text-center alert alert-success" role="alert">

			<div>
				<button type="button" class="close" data-dismiss="alert" aria-label="close">
					<span aria-hidden="true">&times;
					</span>
				</button>
				<span style="font-size:18px">
					{{ contenu}}
				</span>
			</div>

		</div>
	{% endfor %}
	{% for contenu in app.session.getflashbag.get('travailler_personnel.erreur') %}
		<div class=" text-center alert alert-danger" role="alert">

			<div>
				<button type="button" class="close" data-dismiss="alert" aria-label="close">
					<span aria-hidden="true">&times;
					</span>
				</button>
				<span style="font-size:18px">
					{{ contenu}}
				</span>
			</div>

		</div>
	{% endfor %}

	{% for contenu in app.session.getflashbag.get('travail.erreur') %}
		<div class=" text-center alert alert-danger" role="alert">

			<div>
				<button type="button" class="close" data-dismiss="alert" aria-label="close">
					<span aria-hidden="true">&times;
					</span>
				</button>
				<span style="font-size:18px">
					{{ contenu}}
				</span>
			</div>

		</div>
	{% endfor %}
	<div class="row">
		<div class="col-lg-10">
			<h1>Nouveau groupe de personne par équipe</h1>
		</div>
		<div class="col-lg-1"></div>
		<div class="col-lg-1">
			<a href="{{ path('travailler_personnel_index',{'id':id }) }}" data-toggle="tooltip" data-placement="top" title="Liste des personnes par équipe" class="btn btn-success btn-circle">
				<i class="fas fa-clipboard-list"></i>
			</a>
		</div>
	</div>
	<br/><br/>
	<form name="travailler" action="{{ path('travailler_personnel_new',{'id':id }) }}" method="post">
		<div class="input-group mb-3">
			<div class="input-group-prepend">
				<label class="input-group-text" style="width: 170px;" id="basic-addon1">Equipe</label>
			</div>
			<select class="custom-select" name="equipe" id="equipe" style="left: -16px;">
				<option selected>Choisir...</option>
				{% for equipe in equipes %}
					<option  value="{{equipe.id}}">{{equipe.nom}}</option>
				{% endfor %}
			</select>
		</div>
		<div class="form-group">
			<div class="row">

				<div class="col-lg-2">

					<label class="input-group-text" id="basic-addon1" style="">Personnel</label>
				</div>
				<div class="col-lg-10" style="left: -16px;">

					<select class="form-control select2" multiple="multiple" name="role[]" id="personnel"  data-placeholder="Choisir...">
						
						{% for personnel in personnels %}
							<option value="{{personnel.id}}">{{personnel.conteneure}}</option>
						{% endfor %}
					</select>
				</div>
			</div>
		</div>
		<br/>

		<div class="col-md-4 col-xs-4 col-sm-4">
			<button type="submit" class="btn btn-success">Enrégistrer</button>
			<button type="reset" class="btn btn-danger">Annuler</button>
		</div>
	</form>
	{# 	  {{ include('travailler_personnel/_form.html.twig') }}  	
		 #}
